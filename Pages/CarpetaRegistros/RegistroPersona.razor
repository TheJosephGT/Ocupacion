@page "/Persona"
@page "/persona/{PersonaId:int}"

@inject PersonaBLL personaBLL

<EditForm Model="persona" OnInvalidSubmit="Guardar">
    <div class= "card">
    <div class= "card-header">
        <h1> Registo Persona </h1>
    </div>
    
    <div class="card-body">
        <label>PersonaId: </label><br>
        <InputNumber @bind-Value="persona.PersonaId" class="form-control" /><br>

        <button type="buttom" class="btn btn-primary" @onclick="Nuevo"><span class ="oi oi-file" </span>Nuevo</button><br>

        <label>Nombre: </label><br>
        <InputText @bind-Value="persona.Nombre" class="form-control" /><br>

        <label>Telefono: </label><br>
        <InputText @bind-Value="persona.Telefono" class="form-control" /><br>

        <label>Celular: </label><br>
        <InputText @bind-Value="persona.Celular" class="form-control" /><br>

        <label>Email: </label><br>
        <InputText @bind-Value="persona.Email" class="form-control" /><br>

        <label>Direccion: </label><br>
        <InputText @bind-Value="persona.Direccion" class="form-control" /><br>

        <label>FechaNacimiento: </label><br>
        <InputText @bind-Value="persona.FechaNacimiento" class="form-control" /><br>

    </div>

<div class="model-footer">
        <button type="buttom" class="btn btn-primary" @onclick="Nuevo"><span class ="oi oi-file" </span>Nuevo</button>
        <button type="submit" class="btn btn-success" @onclick="Guardar"><span class ="oi oi-delete"</span>Guardar</button>
        <button type="button" class="btn btn-danger" @onclick="Eliminar"><span class ="oi oi-document"</span>Eliminar</button>
    </div>

</div>
</EditForm>

@code {
    [Parameter]

    public int PersonaId { get; set; }

    public Persona persona { get; set; } = new Persona();

    protected override void OnInitialized()
    {
        if (PersonaId > 0)
        {
            this.persona.PersonaId = PersonaId;
            this.Buscar();
        }
    }

    void Buscar()
    {

        var personaEncontrada = personaBLL.Buscar(persona.PersonaId);
        if (personaEncontrada != null)
        {
            this.persona = personaEncontrada;
        }
    }

    void Nuevo()
    {
        this.persona = new Persona();

    }

    void Guardar()
    {

        var guardado = personaBLL.Guardar(persona);

        if (guardado)
        {
            Nuevo();
        }
        else
        {

        }

    }

    void Eliminar()
    {
        bool eliminado;

        eliminado = true;

        if (eliminado)
        {
            Nuevo();
        }
        else
        {

        }

    }



}